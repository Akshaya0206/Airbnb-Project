<% layout('/layouts/boilerplate') -%>
<body>
    <h1><%=category%> Listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <%for(let lists of categorylistings){%>
        <a href="/listings/<%=lists._id%>" class="listing-link">
        <div class="listing-card col card">
            <img src="<%=lists.image.url%>" class="card-img-top" alt="listings-image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%=lists.title%></b> <br>
                &#8377; <%=lists.price.toLocaleString("en-IN")%>/night
                <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
              </p>
            </div>
          </div>
          </a>
        <%}%>
       </div>
</body>